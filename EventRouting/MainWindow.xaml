<Window x:Class="EventRouting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EventRouting"
        mc:Ignorable="d"
        Title="MainWindow" Height="263" Width="338"
        x:Name="Wnd_Main"
        ButtonBase.Click="Wnd_Main_Click">
    <StackPanel x:Name="Spl_Eins" Background="Yellow"
                PreviewMouseDown="Spl_PreviewMouseDown"
                MouseDown="Spl_MouseDown">
        <StackPanel x:Name="Spl_Zwei" Background="Green" Margin="20"
                    PreviewMouseDown="Spl_PreviewMouseDown"
                    MouseDown="Spl_MouseDown">
            <StackPanel x:Name="Spl_Drei" Background="Blue" Margin="20"
                        PreviewMouseDown="Spl_PreviewMouseDown"
                        MouseDown="Spl_MouseDown">
                <Button x:Name="Btn_KlickMich" Margin="20"
                        Content="Klick Mich"
                        Click="Btn_KlickMich_Click"/>
            </StackPanel>
        </StackPanel>
        <TextBlock x:Name="Tbl_Output" Height="200"/>
    </StackPanel>
</Window>
